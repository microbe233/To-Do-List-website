<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">Create new Campground</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="needs-validtion">

                <div class="mb-3">
                <label class="form-lable" for="title">Title</label>
                <input class="form-control" type="text" name="campground[title]" id="title" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                </div>
                
        
                <div class="mb-3">
                <label class="form-lable" for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                </div>
               

                <div class="mb-3">
                <label class="form-lable" for="image">Image Url</label>
                <input class="form-control" type="text" name="campground[image]" id="image" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                </div>
                

                <div class="mb-3">
                    <label class="form-lable" for="price-lable">Price</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="price-lable">$</span>
                        <input name="campground[price]" type="text" class="form-control" placeholder="0.00" aria-label="price" aria-describedby="price-lable" required>
                      <div class="valid-feedback">
                        Looks good!
                      </div>
                    </div>
                </div>
                

                <div class="mb-3">
                <label class="form-lable" for="description">Description</label>
                <textarea class="form-control" type="text" name="campground[description]" id="description" required></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
                </div>
               
        
                
                <button class="btn btn-success"> Create </button>
            </form>

        </div>

        <div class="mt-3 col-6 offset-3">
            <a class="btn btn-primary" href="/campgrounds">Go Back</a>
        </div>
    </div>

    
<% layout('layouts/boilerplate') %>

    <h1>All Camps</h1>

    <div class="row">

        <% for(let camp of campgrounds){ %>
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="row">
                        <div class="col-md-5 fixed-dimension">
                            <img src="<%= camp.image  %>" alt="image" class="img-fluid fixed-dimension">
                        </div>
                        <div class="col-md-7">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <%= camp.title %>
                                </h5>
                                <p class="card-text">
                                    <%= camp.description %>
                                </p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        <%= camp.location %>
                                    </small>
                                </p>
                                <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">View</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </div>